

@model List<ECommerceFinal.Models.ShopVM>


@{
    string imageURL = "/Content/images/noImage.png";

    var firstProd = Model.ElementAt(0);
    List<EcommerceEntities.Image> imgs = null;

}
<div class="spacer">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>



<!-- Begin Kenne's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>Shop Now</h2>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active">Shop Now</li>
            </ul>
        </div>
    </div>
</div>
<!-- Kenne's Breadcrumb Area End Here -->
<!-- Begin Kenne's Content Wrapper Area -->
<div class="kenne-content_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop-toolbar">
                    <div class="product-view-mode">
                        <a class="active grid-3" data-target="gridview-3" data-toggle="tooltip" data-placement="top" title="Grid View"><i class="fa fa-th"></i></a>
                        <a class="list" data-target="listview" data-toggle="tooltip" data-placement="top" title="List View"><i class="fa fa-th-list"></i></a>
                    </div>
                    <div class="product-page_count">
                        <p>Showing 1–9 of 40 results)</p>
                    </div>
                    <div class="product-item-selection_area">
                        <div class="product-short">
                            <label class="select-label">Short By:</label>
                            <select class="nice-select myniceselect">
                                <option value="1">Default sorting</option>
                                <option value="2">Name, A to Z</option>
                                <option value="3">Name, Z to A</option>
                                <option value="4">Price, low to high</option>
                                <option value="5">Price, high to low</option>
                                <option value="5">Rating (Highest)</option>
                                <option value="5">Rating (Lowest)</option>
                                <option value="5">Model (A - Z)</option>
                                <option value="5">Model (Z - A)</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="shop-product-wrap grid gridview-3 row">



                    @foreach (var product in Model)
                    {

                        imgs = product.Images;



                        <div class="col-lg-4 col-md-4 col-sm-6">
                            <div class="product-item">
                                <div class="single-product">
                                    <div class="product-img">
                                        <a href="single-product.html">


                                            @if (imgs.Count > 0)
                                            {
                                                <img class="primary-img" src=@product.Images[0].Name alt="Image">
                                                if (imgs.Count > 1)
                                                {

                                                    <img class="secondary-img" src=@product.Images[1].Name alt=" Product Image">
                                                }
                                            }
                                            else
                                            {
                                                <img class="primary-img" src=@imageURL alt="Image">
                                            }

                                        </a>

                                    </div>
                                    <div class="product-content">
                                        <div class="product-desc_info">


                                            <h3 class="product-name"><a href="single-product.html"> @product.Name</a></h3>
                                            <div class="price-box">
                                                <span class="new-price">Rs.@product.Price </span>
                                            </div>
                                            <div class="rating-box">
                                                <ul>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li class="silver-color">
                                                        <i class="ion-ios-star-outline"></i>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="list-product_item">
                                <div class="single-product">
                                    <div class="product-img">
                                        <a href="single-product.html">

                                            @if (imgs.Count > 0)
                                            {
                                                <img class="primary-img" src=@product.Images[0].Name alt="Image">

                                            }
                                            else
                                            {
                                                <img class="primary-img" src=@imageURL alt="Image">
                                            }

                                        </a>
                                    </div>
                                    <div class="product-content">
                                        <div class="product-desc_info">
                                            <div class="price-box">
                                                <span class="new-price"></span>
                                            </div>
                                            <h6 class="product-name">Name: @product.Name<a href="single-product.html"></a></h6>
                                            <h6 class="product-name">Price: @product.Price<a href="single-product.html"></a></h6>

                                            <div class="rating-box">
                                                Rating:
                                                <ul>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li><i class="ion-ios-star"></i></li>
                                                    <li class="silver-color">
                                                        <i class="ion-ios-star-outline"></i>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="product-short_desc">
                                                <p>
                                                    Description: @product.Description
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @*<div class="row">
                            <div class="col-lg-12">
                                <div class="kenne-paginatoin-area">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <ul class="kenne-pagination-box primary-color">
                                                <li class="active"><a href="javascript:void(0)">1</a></li>
                                                <li><a href="javascript:void(0)">2</a></li>
                                                <li><a href="javascript:void(0)">3</a></li>
                                                <li><a href="javascript:void(0)">4</a></li>
                                                <li><a href="javascript:void(0)">5</a></li>
                                                <li><a class="Next" href="javascript:void(0)">Next</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <!-- Kenne's Content Wrapper Area End Here -->
</div>